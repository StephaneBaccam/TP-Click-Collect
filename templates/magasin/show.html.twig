{% extends 'base.html.twig' %}

{% block title %}Magasin{% endblock %}

{% block body %}
    <h1>Magasin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ magasin.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ magasin.nom }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Articles</h2>
        {% for stock in magasin.stocks %}
            {{ stock.article.nom }} - {{ stock.quantite }}
        {% endfor %}

    <a href="{{ path('magasin_index') }}">back to list</a>

    <a href="{{ path('magasin_edit', {'id': magasin.id}) }}">edit</a>

    {{ include('magasin/_delete_form.html.twig') }}
{% endblock %}
